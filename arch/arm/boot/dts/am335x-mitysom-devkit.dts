/* RS485 EXPANSION 1 */
&uart3 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart3_pins>;
	rts-gpio = <&gpio3 9 GPIO_ACTIVE_HIGH>;
	rs485-rts-delay =<0 0>;
	rs485-rts-active-high;
	/*rs485-rx-during-tx;*/
	linux,rs485-enabled-at-boot-time;
	status = "okay";
};

/* RS485 EXPANSION 0 */
&uart4 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart4_pins>;
	rts-gpio = <&gpio2 20 GPIO_ACTIVE_HIGH>;
	rs485-rts-delay =<0 0>;
	rs485-rts-active-high;
	/*rs485-rx-during-tx;*/
	linux,rs485-enabled-at-boot-time;
	status = "okay";
};

&i2c0 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c0_pins>;

	status = "okay";
	clock-frequency = <400000>;

};

&i2c1 {
	/* SOM Factory EEPROM 0x50 - 0x57 */
	/* SOM PMIC SmartReflex 0x12 */
};

&usb0 {
	status = "okay";
	/* Port will act as an OTG device if the baseboard supports this feature */
	dr_mode = "otg";
};

&usb1 {
	status = "okay";
	/* This port does not support OTG support. It can only act as host. See http://processors.wiki.ti.com/index.php/AM335x_USB_Driver%27s_Guide for more info */
	dr_mode = "host";
};

&lcdc {
	status = "okay";
};

&epwmss0 {
	status = "okay";

	ehrpwm0: pwm@48300200 {
		status = "okay";
		pinctrl-names = "default", "sleep";
